	rm -f $(bgdir)/lbjoin.cfg
	rm -rf $(bgdir)/lbjoin

$(UCC):
	+(cd $(UCCDIR);$(MAKE) -f Makefile.mingw ucc.exe)


usecode: $(UCC) $(USECODE_OBJECTS)
	$(UCC) -I . -o usecode ./usecode.uc

clean:
	rm -f $(CLEANFILES)

