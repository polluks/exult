# Where is Ultima 7 installed
U7PATH=C:/Ultima7

# Base of the exult source
SRC=../..

srcdir=.

UCCDIR=$(SRC)
UCC=$(UCCDIR)/ucc.exe

EXPACKDIR=$(SRC)
EXPACK=$(EXPACKDIR)/expack.exe

bgdir=$(U7PATH)/forgeofvirtue/mods

USECODE_OBJECTS = \
	usecode.uc	

CLEANFILES = \
	usecode	

all: usecode

install: all
	mkdir -p $(bgdir)
	cp lbjoin.cfg $(bgdir)/lbjoin.cfg
